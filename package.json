{
    "name": "nr-monaco-build",
    "version": "0.47.0",
    "description": "A wrapper to generate an es6 monaco editor with i18n, specifically developed for node-red",
    "private": true,
    "main": "index.js",
    "scripts": {
        "build": "npm run update-types && npm run generate && npm run generate-themes && npm run pack",
        "clean": "rm -r -f output && rm -r -f temp",
        "generate": "node generate-monaco-esm-i18n.js",
        "generate-themes": "node generate-themes.js",
        "update-types": "node update-types.js",
        "pack": "npx webpack",
        "demo": "npx http-server",
        "generate-extraLibs": "node generate-extraLibs.js"
    },
    "keywords": [
        "monaco",
        "node-red"
    ],
    "author": "steve-mcl",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/node": "^18.11.9",
        "copy-webpack-plugin": "^10.2.4",
        "css-loader": "^6.7.1",
        "dts-minify": "^0.3.2",
        "git-pull-or-clone": "^2.0.2",
        "glob": "^10.2.6",
        "insane": "^2.6.2",
        "mkdirp": "^3.0.1",
        "monaco-editor": "0.47.0",
        "monaco-editor-webpack-plugin": "^7.1.0",
        "monaco-themes": "^0.4.4",
        "ncp": "^2.0.0",
        "read-package-json": "^7.0.0",
        "recursive-readdir": "^2.2.3",
        "replace-in-file": "^6.3.2",
        "rimraf": "^5.0.5",
        "style-loader": "^3.3.3",
        "typedoc": "^0.25.4",
        "typescript": "^5.3.3",
        "url-loader": "^4.1.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "staticFiles": {
        "staticPath": [
            {
                "outDirPattern": "**/dist",
                "staticPath": "theme",
                "staticOutDir": "theme"
            },
            {
                "outDirPattern": "**/dist-legacy",
                "staticPath": "theme",
                "staticOutDir": "theme"
            }
        ]
    }
}
